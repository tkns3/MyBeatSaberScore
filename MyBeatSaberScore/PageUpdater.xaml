<Page x:Class="MyBeatSaberScore.PageUpdater"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyBeatSaberScore"
      mc:Ignorable="d" 
      d:DesignWidth="1070"
      Height="auto"
      Title="PageUpdater" Loaded="Page_Loaded">

    <Grid>
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10,4,0,0">
                <Button x:Name="XaButtonUpdate" Height="40" Width="80" Click="XaButtonUpdate_Click">アップデート</Button>
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="4">
                    <TextBlock x:Name="XaTextCurrentVersion"></TextBlock>
                    <TextBlock x:Name="XaTextLatestVersion"></TextBlock>
                </StackPanel>
            </StackPanel>
            <DockPanel DockPanel.Dock="Bottom" Margin="10,4,10,4">
                <TextBox x:Name="XaTextUpdateHistory" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible"></TextBox>
            </DockPanel>
        </DockPanel>
    </Grid>
</Page>
